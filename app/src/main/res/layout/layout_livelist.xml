    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="门店类型" />

    <TextView
        android:id="@+id/tv_vedio_url_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_address"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        tools:text="rtmp" />

    <TextView
        android:id="@+id/tv_vedio_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_vedio_url_type"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        tools:text="播放地址播放地址播放地址播放地址播放地址播放地址播放地址播放地址播放地址播放地址播放地址播放地址播放地址播放地址播放地址" />


    <TextView
        android:id="@+id/tv_vedio_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_address"
        android:layout_alignBottom="@+id/tv_address"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        tools:text="视频类型" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_vedio_url"
        android:layout_marginTop="10dp"
        android:background="@color/gray_CCCCCC" />

</RelativeLayout>
